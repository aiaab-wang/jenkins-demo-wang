pipeline {
    agent {
        kubernetes {
            label 'jenkins'
            defaultContainer 'jnlp'
        }
    }
    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/aiaab-wang/jenkins-demo-wang.git' // 替换为你的仓库地址
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    def imageName = "your-docker-registry/your-image:${env.BUILD_ID}" // 替换为你的镜像名称
                    sh "docker build -t ${imageName} ."
                }
            }
        }
        stage('Push Docker Image') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'docker-credentials', passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                        sh 'echo $DOCKER_PASSWORD | docker login your-docker-registry -u $DOCKER_USERNAME --password-stdin' // 替换为你的 Docker Registry
                        sh "docker push ${imageName}"
                    }
                }
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                script {
                    sh "kubectl run your-pod --image=${imageName} --restart=Never" // 替换为你的 pod 名称
                }
            }
        }
    }
}
